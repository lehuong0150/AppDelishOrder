<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppDelishOrder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AppDelishOrder" parent="Base.Theme.AppDelishOrder" />
    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#F4FBFC</item>
    </style>
    <!-- Dialog background if light mode on -->
    <style name="DIALOG">
        <item name="android:background">@drawable/dialog</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>
    <!-- Button background if light mode on -->
    <style name="BUTTON">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Save button background if light mode on -->
    <style name="SAVE">
        <item name="android:backgroundTint">#FFF</item>
        <item name="android:textColor">@color/color_font</item>
    </style>
    <!-- ADD button background if light mode on -->
    <style name="ICON">
        <item name="android:tint">#000</item>
    </style>
    <!-- MATCH button background if light mode on -->
    <style name="MATCH">
        <item name="android:textColor">@color/color_font</item>
    </style>
    <!-- Update Profile button background if light mode on -->
    <style name="BUTTON_BIG">
        <item name="android:backgroundTint">#343B47</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Text word background if light mode on -->
    <style name="WORD">
        <item name="android:textColor">@color/color_font</item>
    </style>
    <!-- Button user background if dark mode on -->
    <style name="BUTTON_USER">
        <item name="android:backgroundTint">#FFF</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawableEnd">@drawable/baseline_arrow_right_24</item>
    </style>
</resources>