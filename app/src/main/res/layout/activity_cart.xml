<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    tools:context=".View.Activities.CartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/back_editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:backgroundTint="@color/transparen"
                    android:src="@drawable/baseline_keyboard_backspace_24" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giỏ hàng"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tóm tắt đơn hàng"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txtSub"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Tổng tạm tính"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="12dp"
                    tools:layout_editor_absoluteY="12dp" />

                <TextView
                    android:id="@+id/txt_subtotal"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="204dp"
                    android:background="@color/white"
                    android:text="$"
                    app:layout_constraintStart_toEndOf="@+id/txtSub"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="12dp" />



                <TextView
                    android:id="@+id/txtDeli"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:text="Phí áp dụng"
                    app:layout_constraintTop_toBottomOf="@+id/txtSub"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/txt_deliver"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="220dp"
                    android:background="@color/white"
                    android:text="$"
                    app:layout_constraintStart_toEndOf="@+id/txtDeli"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="44dp" />

                <TextView
                    android:id="@+id/txtTotal"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@color/white"
                    android:text="Tổng cộng"
                    app:layout_constraintTop_toBottomOf="@+id/txtDeli"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/txt_total"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="232dp"
                    android:background="@color/white"
                    android:text="$"
                    app:layout_constraintStart_toEndOf="@+id/txtTotal"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="94dp" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:background="@color/gray"
                    app:layout_constraintStart_toStartOf="@+id/txtTotal"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="80dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>