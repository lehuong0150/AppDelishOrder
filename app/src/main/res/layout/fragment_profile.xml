<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/toolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/inter_semibold"
            android:minHeight="?attr/actionBarSize"
            android:textSize="25sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:titleTextColor="@color/black">

            <ImageButton
                android:id="@+id/back_editProfile"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/transparen"
                android:src="@drawable/baseline_keyboard_backspace_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Hồ sơ"
                android:layout_marginRight="35dp"
                android:textColor="@color/black"
                android:textSize="27sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ed_profile_image"
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:src="@drawable/grocery_cart"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/btn_change_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:text="Cập nhật ảnh"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="209dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/ed_profile_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left|top"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="5dp"
            android:text="Le Huong"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_profile_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left|top"
            android:paddingLeft="5dp"
            android:text="0819486150"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_profile_email"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="left|top"
            android:paddingLeft="5dp"
            android:text="le308934@gmail.com"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>




        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginTop="598dp"
            android:background="@drawable/start_border"
            android:fontFamily="@font/inter_semibold"
            android:text="Lưu"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.856" />

</androidx.constraintlayout.widget.ConstraintLayout>