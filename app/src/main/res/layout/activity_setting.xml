<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activities.SettingActivity">
    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/toolbarSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    style="@style/SCREEN"
                    app:titleTextColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.023"
                    android:textSize="25sp"
                    android:fontFamily="@font/inter_semibold">
                    <ImageButton
                        android:id="@+id/back_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/transparen"
                        style="@style/ICON"
                        android:src="@drawable/baseline_keyboard_backspace_24"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Cài đặt"
                        style="@style/TEXT"
                        android:textSize="27sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cài đặt hệ thống"
                        android:layout_marginLeft="55px"
                        android:layout_marginBottom="35px"
                        android:textSize="20sp"
                        android:textColor="@color/gray"/>
                    <Button
                        android:id="@+id/btn_notification_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông báo"
                        android:gravity="start|center_vertical"
                        android:backgroundTint="@color/transparen"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="15px"

                        />
                    <Button
                        android:id="@+id/btn_manage_storage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quản lý bộ nhớ"
                        android:gravity="start|center_vertical"
                        android:backgroundTint="@color/transparen"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="15px"

                        />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_sound_effect"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:text="Âm thanh"
                        android:textSize="20sp"
                        android:layout_marginLeft="60px"
                        android:textStyle="bold"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="15px"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:text="Dank mode"
                        android:layout_marginLeft="60px"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="15px"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="30px"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20px"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:layout_marginLeft="55px"
                        android:layout_marginBottom="30px"
                        android:textSize="20sp"
                        android:textColor="@color/gray"/>
                    <Button
                        android:id="@+id/btn_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About us"
                        android:gravity="start|center_vertical"
                        android:backgroundTint="@color/transparen"
                        android:textSize="20sp"
                        android:textColor="@color/black"


                        />
                    <Button
                        android:id="@+id/btn_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage storage"
                        android:gravity="start|center_vertical"
                        android:backgroundTint="@color/transparen"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>